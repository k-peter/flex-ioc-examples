<?xml version="1.0" encoding="utf-8"?>
<mx:Panel 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	title="This mimics another view that is bound to the same domain"
	creationComplete="init()"
	layout="vertical">
	<mx:Script>
		<![CDATA[
			import ac.iocsample.prana.factory.PranaFactory;
			import org.pranaframework.context.support.XMLApplicationContext;
			import ac.iocsample.populatedomain.model.pm.OtherPM;
			
			[Bindable]
			public var otherPM : OtherPM;

			private function init() : void
		    {
				otherPM = PranaFactory.getObject("otherPM");
		    }

			
		]]>
	</mx:Script>
	<mx:Label 
		text="{ otherPM.account.uniqueId }" />
</mx:Panel>
