<?xml version="1.0" encoding="utf-8"?>
<mx:Panel 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:view="ac.iocsample.passtheparcel.view.*"
	layout="vertical"
	width="100%"
	height="100%"
	title="Pass the parcel" 
	creationComplete="init()">
	<mx:Script>
		<![CDATA[
			import ac.iocsample.passtheparcel.model.domain.PTPModelLocator;
			import ac.iocsample.passtheparcel.model.pm.StartPM;
			
			[Bindable]
			private var startPM : StartPM;
			
			private function init() : void
			{
				startPM = new StartPM( PTPModelLocator.getInstance().parcel );
			}
			
		]]>
	</mx:Script>
		<mx:Text
			width="100%"
			text="This is when a model reference is passed into an object for the sole purpose of passing it onto another object."/>
			<mx:Text
			width="100%"
			text="The PMs don't have any knowledge of each other here."/>
	
		<view:StartView 
			id="startView" 
			startPM="{ startPM }"/>
	</mx:Panel>